<p id="notice"><%= notice %></p>

<h1>Contatos</h1>

<table class="responsive-table highlight striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>E-mail</th>
      <th>Idade</th>
      <th>Estado</th>
      <th>Cargo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.age %></td>
        <td><%= contact.state %></td>
        <td><%= contact.role %></td>
        <td><%= link_to 'Mostrar', contact, :class => "waves-effect waves-light btn" %></td>
        <td><%= link_to 'Alterar', edit_contact_path(contact), :class => "waves-effect waves-light btn" %></td>
        <td><%= link_to 'Remover', contact, method: :delete, data: { confirm: 'VocÃª tem certeza que deseja remover este contato?' }, :class => "waves-effect waves-light btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

